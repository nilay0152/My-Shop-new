@model SMS.Model.FormModel

@{
    ViewBag.Title = "Form";
}
<link type="text/css" rel="stylesheet" href="@Url.Content("~/Content/inc/font-awesome/css/font-awesome.min.css")" />
<!DOCTYPE html>
<html lang="en">
<body>
<div class="from-design">

    @{

        if (Model.Id > 0)
        {
            ViewBag.Title = "Edit Form";
        }
        else
        {
            ViewBag.Title = "Add Form";
        }
    }


    @using (Html.BeginForm("Create", "Forms", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(m => m.Id)


        <div class="subheader">
            <div class="left_title">
                @if (Model.Id > 0)
                {
                    <h4>Edit Form</h4>
                }
                else
                {
                    <h4>Add Form</h4>
                }
            </div>
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
    <label style="margin-right:50px; margin-left:145px">Name<sup class="span_req"><i class="fa fa-star" aria-hidden="true"></i></sup></label>
    <div class="col-md-2" style="width:28%; margin-left:-50px; margin-right:10px">
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <label style="margin-right:50px; margin-left:145px">Navigate URL<sup class="span_req"><i class="fa fa-star" aria-hidden="true"></i></sup></label>
    <div class="col-md-2" style="width:28%; margin-left:-50px; margin-right:10px">
        @Html.EditorFor(model => model.NavigateURL, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.NavigateURL, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <label style="margin-right:50px; margin-left:145px">Form Access Code<sup class="span_req"><i class="fa fa-star" aria-hidden="true"></i></sup></label>
    <div class="col-md-2" style="width:28%; margin-left:-50px; margin-right:10px">
        @Html.EditorFor(model => model.FormAcessCode, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.FormAcessCode, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <label style="margin-right:50px; margin-left:145px">Display Order<sup class="span_req"><i class="fa fa-star" aria-hidden="true"></i></sup></label>
    <div class="col-md-2" style="width:28%; margin-left:-50px; margin-right:10px">
        @Html.EditorFor(model => model.DisplayOrder, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DisplayOrder, "", new { @class = "text-danger" })
    </div>
</div>



<div class="form-group">
    <label style="margin-right:50px; margin-left:145px">Parent Form<sup class="span_req"><i class="fa fa-star" aria-hidden="true"></i></sup></label>
    <div class="col-md-2" style="width:28%; margin-left:-50px; margin-right:10px">
        @Html.DropDownListFor(model => model.ParentForm, Model._parentFormList, new { @class = "form-control", id = "Form" })
    </div>
</div>

<div class="form-group">
    <label style="margin-right:50px; margin-left:145px">Is Active<sup class="span_req"><i class="fa fa-star" aria-hidden="true"></i></sup></label>
    <div class="col-md-3">
        <div class="input_box">
            <div class="on_off_btn sms_not">
                @Html.CheckBoxFor(model => model.IsActive, new { @class = "ch_btn" })
                <i></i>
                <span class="span_yes">Yes</span>
                <span class="span_no">No</span>
            </div>
        </div>
    </div>
</div>

<div class="form-group">
    <label style="margin-right:50px; margin-left:145px">Is  DisplayMenu<sup class="span_req"><i class="fa fa-star" aria-hidden="true"></i></sup></label>
    <div class="col-md-3">
        <div class="input_box">
            <div class="on_off_btn sms_not">
                @Html.CheckBoxFor(model => model.IsActive, new { @class = "ch_btn" })
                <i></i>
                <span class="span_yes">Yes</span>
                <span class="span_no">No</span>
            </div>
        </div>
    </div>
</div>

        <div class="form-group"  style="margin-left:100px">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" /> 
                @Html.ActionLink("Back to List", "Index", new { }, htmlAttributes: new { @class = "btn btn-default" })
            </div>
        </div>

    }


    <script src="Content/bootstrap.bundle.min.js"></script>
    </body>
</html>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

