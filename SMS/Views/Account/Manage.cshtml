@model SMS.Model.ForgotPassword

@{
    ViewBag.Title = "Change Password";
    ViewBag.StatusMessage = "Manage";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<link type="text/css" rel="stylesheet" href="@Url.Content("~/Content/inc/font-awesome/css/font-awesome.min.css")" />
<!DOCTYPE html>
<html lang="en">
<body>

    @using (Html.BeginForm("Manage", "Account"))
    {
        @Html.AntiForgeryToken()

    <div class="from-design" style="margin-left:90px">
        @if (TempData["Message"] != null)
        {
            <label class="bg-success text-white alertmsg"> @TempData["Message"]</label>
        }
        <h4>Change Password</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label style="margin-right:50px; margin-left:145px">Old Password<sup class="span_req"><i class="fa fa-star" aria-hidden="true"></i></sup></label>
            <div class="col-md-2" style="width:22%; margin-left:-50px; margin-right:10px">
                @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="margin-right:50px; margin-left:145px">New Password<sup class="span_req"><i class="fa fa-star" aria-hidden="true"></i></sup></label>
            <div class="col-md-2" style="width:22%; margin-left:-50px; margin-right:10px">
                @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label style="margin-right:50px; margin-left:145px">Confirm Password<sup class="span_req"><i class="fa fa-star" aria-hidden="true"></i></sup></label>
            <div class="col-md-2" style="width:22%; margin-left:-50px; margin-right:10px">
                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-left:200px">

            <div class="col-md-offset-1 col-md-8">

                <button type="submit" class="btn btn-primary" href="@Url.Action("Logout", "Account")">Change Password</button> 
                <a href="@Url.Action("Index", "Home")" class="btn btn-danger">Cancel</a>
            </div>
        </div>
    </div>
    }
    <script>
        $(document).ready(function () {
            var successElement = $("#alertid");
            if (successElement) {
                setTimeout(function () { successElement.hide(); }, 4000);
            }
        });
        $(document).ready(function () {
            var successElement = $(".alertmsg");
            if (successElement) {
                setTimeout(function () { successElement.hide(); }, 2000);
            }
        });
      
    </script>

    <script src="Content/bootstrap.bundle.min.js"></script>
    
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
